<?xml version="1.0" encoding="utf-8"?>
<io.codelabs.widget.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:gravity="center"
                                           android:id="@+id/pager_container"
                                           android:orientation="vertical"
                                           android:padding="@dimen/padding_large">


    <io.codelabs.widget.FourThreeImageView android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:id="@+id/main_pager_image"
                                           android:src="@drawable/sample_image"
                                           android:scaleType="centerCrop"/>

    <io.codelabs.widget.BaselineGridTextView android:layout_width="wrap_content"
                                             android:text="@string/zenitech_app_name"
                                             android:id="@+id/title_pager"
                                             android:padding="@dimen/padding_normal"
                                             android:layout_marginTop="@dimen/spacing_xlarge"
                                             android:layout_height="wrap_content"
                                             android:textAppearance="?textAppearanceHeadline6"/>

    <io.codelabs.widget.BaselineGridTextView android:layout_width="wrap_content"
                                             android:text="@string/lorem_ipsum"
                                             android:id="@+id/desc_pager"
                                             android:maxLines="5"
                                             android:ellipsize="end"
                                             android:paddingEnd="@dimen/padding_normal"
                                             android:paddingStart="@dimen/padding_normal"
                                             android:layout_height="wrap_content"
                                             android:textAppearance="?textAppearanceSubtitle1"/>

</io.codelabs.widget.ForegroundLinearLayout>