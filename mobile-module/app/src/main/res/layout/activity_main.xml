<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">


    <io.codelabs.widget.BaselineGridTextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                             android:text="@string/zenitech_app_name"
                                             app:layout_constraintTop_toTopOf="parent"
                                             app:layout_constraintBottom_toBottomOf="parent"
                                             app:layout_constraintStart_toStartOf="parent"
                                             app:layout_constraintEnd_toEndOf="parent"
                                             android:padding="@dimen/padding_normal"
                                             android:textAppearance="@style/TextAppearance.MyTheme.Body1"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Issue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            app:icon="@drawable/twotone_how_to_vote_24px"/>

</androidx.constraintlayout.widget.ConstraintLayout>